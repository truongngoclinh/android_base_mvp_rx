<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarSpinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:overlapAnchor">false</item>
        <item name="overlapAnchor">false</item>
        <item name="android:background">@null</item>
    </style>

    <style name="BaseActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/ms_dark_default_bg</item>
        <item name="titleTextStyle">@style/ActionBarTitle</item>
    </style>

    <style name="BaseToolBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/ms_image_tint_toolbar_icon</item>
        <item name="android:editTextColor">@color/ms_default_text</item>
        <item name="android:textColor">@color/com_linhtruong_mershop_default_text_selector</item>
        <item name="android:textColorHint">@color/ms_default_text_color_hint</item>
    </style>

    <!-- LIGHT THEME -->
    <style name="BaseToolBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/com_linhtruong_mershop_default_text_selector</item>
        <item name="android:textColorHint">@color/ms_txt_color_hint</item>
        <item name="colorControlNormal">@color/ms_image_tint_toolbar_icon</item>
        <item name="android:actionBarItemBackground">@drawable/com_linhtruong_mershop_item_selector_borderless</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButton</item>
        <item name="actionOverflowButtonStyle">@style/ToolbarOverFlowButton</item>
    </style>

    <!-- DARK THEME -->
    <style name="BaseToolBarDark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--        <item name="android:textColorPrimary"></item>
                <item name="android:textColorHint"></item>
                <item name="colorControlNormal"></item>
                <item name="actionBarItemBackground"></item>
                <item name="android:actionBarItemBackground"></item>
                <item name="toolbarNavigationButtonStyle"></item>
                <item name="actionOverflowButtonStyle"></item>
                <item name="searchViewStyle"></item>-->
    </style>

    <style name="PopupThemeDark" parent="ThemeOverlay.AppCompat.Dark">
        <!--        <item name="android:colorBackground"></item>
                <item name="android:textColor"></item>-->
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/ms_default_text</item>
    </style>

    <style name="ToolbarThemeBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <!--<item name="android:background">?attr/DrawableBgDefaultWithEdgeBottom</item>-->
    </style>

    <style name="ToolbarNavigationButton" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:background">@drawable/com_linhtruong_mershop_item_selector_borderless</item>
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="ToolbarOverFlowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ele_nav_ic_more</item>
    </style>

    <style name="ToolbarTheme" parent="ToolbarThemeBase">
        <item name="popupTheme">@style/PopupTheme</item>
        <item name="android:theme">@style/BaseToolBar</item>
        <item name="navigationIcon">@drawable/ele_nav_ic_return</item>
        <item name="collapseIcon">@drawable/ele_nav_ic_return</item>
    </style>

    <style name="ToolbarDarkTheme" parent="ToolbarThemeBase">
        <item name="popupTheme">@style/PopupThemeDark</item>
        <item name="android:theme">@style/BaseToolBarDark</item>
        <item name="navigationIcon">@drawable/ele_nav_ic_dark_return</item>
        <item name="collapseIcon">@drawable/ele_nav_ic_dark_return</item>
    </style>
</resources>